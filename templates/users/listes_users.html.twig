                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">User {{ user.id }}</h5>
                            <li class="list-group-item">Nom :  {{ user.nom }}</li>
                            <li class="list-group-item">Pr√©nom : {{ user.prenom }}</li>
                            <li class="list-group-item">Age : {{ user.age }}</li>
                            <li class="list-group-item">Email : {{ user.email }}</li>
                            </br>
                            <a type="button" class="btn btn-outline-light text-dark" href="infosUser/{{ user.id }}">Selectionner</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
    {% endblock %}




